---
interface Props {
  name: string;
  category: string;
  price: string;
  image?: string;
  slug: string;
  isCustom?: boolean;
}

const { name, category, price, image = "/images/lunettes.png", slug, isCustom = false } = Astro.props;
---

<a href={isCustom ? '/personnaliser' : `/produit/${slug}`} class="block group">
  <div class={`card bg-zinc-900 border transition-all duration-300 group-hover:scale-105 ${
    isCustom 
      ? 'border-yellow-500/50 bg-gradient-to-br from-yellow-500/10 to-amber-500/10' 
      : 'border-white/10 hover:border-yellow-500/50'
  }`}>
    <figure class="px-6 pt-6 relative">
      {isCustom && (
        <div class="absolute top-8 right-8 z-10">
          <span class="inline-block px-3 py-1 bg-yellow-500 text-black text-xs font-bold rounded-full uppercase">
            ✨ Nouveau
          </span>
        </div>
      )}
      <img 
        src={image} 
        alt={`Modèle ${name}`} 
        class={`rounded-lg h-48 w-full object-cover ${isCustom ? 'opacity-90' : ''}`}
      />
      {isCustom && (
        <div class="absolute inset-0 flex items-center justify-center bg-black/40 rounded-lg mx-6 mt-6">
          <svg class="w-16 h-16 text-yellow-500" fill="none" stroke="currentColor" viewBox="0 0 24 24">
            <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M15.232 5.232l3.536 3.536m-2.036-5.036a2.5 2.5 0 113.536 3.536L6.5 21.036H3v-3.572L16.732 3.732z"/>
          </svg>
        </div>
      )}
    </figure>
    <div class="card-body">
      <h3 class={`card-title text-lg font-light ${isCustom ? 'text-yellow-500' : 'text-white'}`}>
        {name}
      </h3>
      <p class="text-gray-400 text-sm capitalize">
        {category}
      </p>
      <p class={`font-serif text-xl mt-2 ${isCustom ? 'text-yellow-500' : 'text-yellow-500'}`}>
        {price}
      </p>
      <div class="card-actions justify-end mt-4">
        <button class={`btn btn-sm transition-colors ${
          isCustom 
            ? 'btn-warning bg-yellow-500 hover:bg-yellow-400 text-black border-none' 
            : 'btn-outline btn-warning hover:bg-yellow-500 hover:text-black'
        }`}>
          {isCustom ? 'Créer maintenant' : 'Choisir'}
        </button>
      </div>
    </div>
  </div>
</a>
