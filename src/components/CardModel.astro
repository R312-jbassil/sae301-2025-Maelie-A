---
interface Props {
  name: string;
  category: string;
  price: string;
  image?: string;
  slug: string;
}

const { name, category, price, image = "/images/lunettes.png", slug } = Astro.props;
---

<a href={`/produit/${slug}`} class="block group">
  <div class="card bg-zinc-900 border border-white/10 hover:border-yellow-500/50 transition-all duration-300 group-hover:scale-105">
    <figure class="px-6 pt-6">
      <img 
        src={image} 
        alt={`ModÃ¨le ${name}`} 
        class="rounded-lg h-48 w-full object-cover"
      />
    </figure>
    <div class="card-body">
      <h3 class="card-title text-white text-lg font-light">
        {name}
      </h3>
      <p class="text-gray-400 text-sm capitalize">
        {category}
      </p>
      <p class="text-yellow-500 font-serif text-xl mt-2">
        {price}
      </p>
      <div class="card-actions justify-end mt-4">
        <button class="btn btn-outline btn-warning btn-sm hover:bg-yellow-500 hover:text-black transition-colors">
          Choisir
        </button>
      </div>
    </div>
  </div>
</a>
